@import "./lib/jquery.mobile-1.3.1/jquery.mobile-1.3.1.min.css?1"

body
    display none  //延时加载 

ul, ol
    padding-left 25px

p, textarea
    line-height 150%

pre 
    padding 1em
    border 1px dashed #2f6fab
    color black
    background-color #f9f9f9

blockquote
    margin 20px

.ui-body-c .ui-link 
    font-weight normal

.ui-content
    line-height:150%

.jqm-footer
    background none
    color #777
    text-shadow 0 1px 0 #fff
    border-top 1px solid rgba(0,0,0,.08)
    margin-top 2em
    p
        font-size .8em
        font-family 'Open Sans', sans-serif
        font-weight 300

.footLinks
    font-size 14px
    border-top 1px solid rgba(0,0,0,.08)
    padding 10px 0 0
    color #888
    font-size 14px
    .ui-link
        font-size 14px
        font-weight normal

.share-link
    margin-left 10px
    a
        float left
        display inline
        line-height 16px
        padding-left 20px
        background-image url(/images/icons-share.png)
        background-repeat no-repeat
    .qq
        background-position 0 0

.gray
    color #888
    font-size 14px
